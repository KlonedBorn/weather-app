<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Scene xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.uwi.soscai.controller.AppController">
   <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" spacing="5.0" style="-fx-font-family: Arial;">
      <children>
         <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="30.0" prefWidth="60.0" style="-fx-font-size: 18px;" text="Location" />
         <HBox prefHeight="30.0" spacing="5.0">
            <children>
               <TextField fx:id="location_tf" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Enter Location Here" HBox.hgrow="ALWAYS" />
               <Button mnemonicParsing="false" onAction="#getWeatherDataByLocation" prefHeight="30.0" prefWidth="80.0" text="Search" />
            </children>
         </HBox>
         <HBox prefHeight="30.0">
            <children>
               <RadioButton maxHeight="1.7976931348623157E308" mnemonicParsing="false" prefHeight="30.0" selected="true" text="City Name" HBox.hgrow="ALWAYS">
                  <toggleGroup>
                     <ToggleGroup fx:id="searchMode" />
                  </toggleGroup>
               </RadioButton>
               <RadioButton maxHeight="1.7976931348623157E308" mnemonicParsing="false" prefHeight="30.0" text="Country Code" toggleGroup="$searchMode" HBox.hgrow="ALWAYS" />
               <RadioButton maxHeight="1.7976931348623157E308" mnemonicParsing="false" prefHeight="30.0" text="Coordinate" toggleGroup="$searchMode" HBox.hgrow="ALWAYS" />
            </children>
         </HBox>
         <VBox spacing="10.0">
            <children>
               <VBox>
                  <children>
                     <HBox spacing="5.0">
                        <children>
                           <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="30.0" style="-fx-font-size: 16px;" text="Hourly Forecast (Today)" />
                        </children>
                     </HBox>
                     <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" pannable="true" prefHeight="160.0" vbarPolicy="NEVER">
                        <content>
                           <HBox fx:id="hourForecast_hbox" prefHeight="170.0" spacing="5.0" />
                        </content>
                     </ScrollPane>
                  </children>
               </VBox>
               <VBox spacing="5.0">
                  <children>
                     <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-font-size: 16px;" text="7-Day Forecast" />
                     <ListView fx:id="dayForecast_lv" prefHeight="200.0" VBox.vgrow="SOMETIMES" />
                  </children>
               </VBox>
            </children>
         </VBox>
      </children>
      <padding>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </padding>
   </VBox>
</Scene>
